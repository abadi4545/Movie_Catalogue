<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moviecatalogue">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCatalogue"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.example.moviecatalogue.MainActivityFavourite"></activity>
        <activity
            android:name="com.example.moviecatalogue.SearchActivities.SearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviecatalogue.MovieActivities.MainActivity" />
        </activity>
        <activity
            android:name="com.example.moviecatalogue.PeopleActivities.MainActivityPeople2"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviecatalogue.PeopleActivities.MainActivityPeople" />
        </activity>
        <activity
            android:name="com.example.moviecatalogue.TvActivities.MainActivitytv2"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviecatalogue.TvActivities.MainActivitytv" />
        </activity>
        <activity
            android:name="com.example.moviecatalogue.MovieActivities.viewallact"
            android:screenOrientation="portrait"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviecatalogue.MovieActivities.MainActivity" />
        </activity>
        <activity
            android:name="com.example.moviecatalogue.PeopleActivities.MainActivityPeople"
            android:theme="@style/Theme.MovieCatalogue">

        </activity>
        <activity
            android:name="com.example.moviecatalogue.TvActivities.MainActivitytv"
            android:theme="@style/Theme.MovieCatalogue">

        </activity>
        <activity
            android:name="com.example.moviecatalogue.MovieActivities.activity_second"
            android:screenOrientation="portrait"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviecatalogue.MovieActivities.MainActivity" />
        </activity>
        <activity
            android:name="com.example.moviecatalogue.TvActivities.viewallacttv"
            android:screenOrientation="portrait"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviecatalogue.TvActivities.MainActivitytv" />
        </activity>
        <activity android:name="com.example.moviecatalogue.MovieActivities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>